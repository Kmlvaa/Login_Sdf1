
@model AccountRegisterVM
@using Microsoft.AspNetCore.Identity
@{
    Layout = "_Layout1";
}
<!-- Sign Up Start -->
<div class="backgroundImage">
    <img src="~/img/Screenshot 2024-03-28 134245.png" />
</div>
<div class="container-fluid main">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4 login">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3 login">
                        <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i></h3>
                            </a>
                            <h3>Sign Up</h3>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" type="text" class="form-control" id="floatingText" placeholder="First Name">
                            <label for="floatingText">First Name</label>
                            <span asp-validation-for="FirstName" style="color:red"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" type="text" class="form-control" id="floatingText" placeholder="Last Name">
                            <label for="floatingText">Last Name</label>
                            <span asp-validation-for="LastName" style="color:red"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Email address</label>
                            <span asp-validation-for="Email" style="color:red"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                            <span asp-validation-for="Password" style="color:red"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>
                            <a href="">Forgot Password</a>
                        </div>
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                        @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
                        {
                            <span style="color:red">@Model.ErrorMessage</span>
                        }
                        <p class="text-center mb-0">Already have an Account? <a asp-controller="Account" asp-action="Login">Sign In</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<!-- Sign Up End -->
@section Scripts{
    ﻿<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
